type User {
  id: Int!
  lastFMUsername: String!
}

type TaskStartResponse {
  success: Boolean!
  token: String!
}

type Artist {
  id: Int!
  name: String!
}

type Album {
  id: Int!
  name: String!
}

type Track {
  id: Int!
  name: String!
  artist: Artist!
  album: Album
}

type Query {
  users: [User!]!
  getUser(username: String!): User!
}

type Mutation {
  indexUser(username: String!): TaskStartResponse!
  saveTrack(artist: String!, album: String, track: String!): Track!
}
